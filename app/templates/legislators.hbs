<div class="row">
  <div class="col-md-4 col-sm-6 col-xs-12">
    State:
    {{view "select"
      content=statesService.states
      optionValuePath = "content.abbreviation"
      optionLabelPath = "content.name"
      class="form-control margin-bottom-20"
      value=state
    }}

    Party:
    {{view "select"
      content=parties
      optionValuePath = "content"
      optionLabelPath = "content"
      class="form-control margin-bottom-20"
      value=party
    }}
  </div>
</div>
<div class="row">
  {{#each item in list}}
    <div class="panel panel-default panel-info">
      <div class="panel-heading"><h3 class="panel-title">{{item.full_name}}</h3></div>
      <div class="panel-body">
        <p>Party: <strong>{{item.party}}</strong></p>
        <p class="uppercase">State: <strong>{{item.state}}</strong></p>
        <p>District: <strong>{{item.district}}</strong></p>
        {{mail-to 'fair.dan@gmail.com' 'Email'}}
      </div>
    </div>
  {{/each}}
</div>
